HTML Section

<div id="app">
  <button @click="toast">
  Toast!
  </button>
  <output>
    {{result}}
  </output>
</div>

------------------------------
JavaScript

describe('my app', () => {
  let vm
  beforeEach(() => {
    vm = new Vue({
      el: '#app',
      data: {
        result: ''
      },
      methods: {
        toast () {
          this.result += 'üçû'
        }
      }
    })
  })
  it('should display üçû every time the button is clicked', done => {
    const buttonEl = vm.$el.querySelector('button')
    const outputEl = vm.$el.querySelector('output')
    buttonEl.dispatchEvent(new Event('click'))
    expect(outputEl.textContent.trim()).toEqual('')
    vm.$nextTick(() => {
      expect(outputEl.textContent.trim()).toEqual('üçû')
      done()
    })
  })
})

